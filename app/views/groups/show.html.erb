<div>
  
  <img 
  class= "image" 
  src= <%= group_icon(@group) %>
  >
  <br><br>
  <h1>Group: <%= @group.name.upcase %></h1>
  <br>
  <h3>Created on: <%= "#{format_date(@group.created_at.to_date)}"%></h3>
  <h3>Created by: <%= @group.user.name%></h3>
  <br>
  <% render 'habits/habit_list' %>
  <%= link_to raw('<span>Add Habit</span>'), new_habit_path(group: @group.id), class: 'action-btn' %>
</div>

