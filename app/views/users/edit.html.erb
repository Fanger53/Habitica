<div class="edit-user">
  <div class="banner">
    <h1>Edit User</h1>
    <%= link_to "Return to your profile", user_path(User.find(session[:user_id])), class: "profile-link" %>
  </div>

  <div class="w-25 border border-secondary mt-3 p-3 rounded">
    <%= form_for @user, url: {action: "create"} do |f| %>
      Name: <%= f.text_field :name, placeholder: "Only first name", class:"form-control my-2 #{@uclas1}"%><br/>
      Profile Picture: <%= f.file_field :avatar, class:"form-control my-2" %>
  </div>
    <%= f.submit "Edit", class: 'btn btn-success my-2' %>
    <% end %>
</div>