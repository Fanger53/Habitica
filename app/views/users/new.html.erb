<div class="container">
  <h1>Sign up</h1>
  <div class="w-25 border border-secondary mt-3 p-3 rounded">
    <%= form_for @user, url: {action: "create"} do |f| %>
      Name: <%= f.text_field :name, placeholder: "Only first name", class:"form-control my-2"%><br/>
      Profile Picture: <%= f.file_field :avatar, class:"form-control my-2" %>
  </div>
    <%= f.submit "Create", class: 'btn btn-success my-2' %>
    <% end %>
 </div>
</div>

